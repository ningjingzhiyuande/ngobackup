<%=javascript_include_tag :kindeditor%>

<%= form_for([:admin,@case],:html=>{:class=>"form-horizontal",:multipart => true}) do |f| %>
 
 <div class="control-group">
    <label class="control-label" for="inputEmail">名称:</label>
    <div class="controls">
      <%= f.text_field :name,:required=>true  %> 
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="inputEmail">链接:</label>
    <div class="controls">
      <%= f.text_field :url,:required=>true %> 
    </div>
  </div>


<div class="control-group">
    <label class="control-label" for="inputEmail">介绍:</label>
    <div class="controls">
      <%= f.kindeditor :info,{:width=>"500px",:minWidth=>"200px", :simple_mode => true }%>
    </div>
</div> 
<div class="control-group">
    <label class="control-label" for="inputEmail">首页图片:</label>
    <div class="controls">
       <%=f.file_field :min_image%>
       <%= image_tag(@case.min_image_url) if @case.min_image? %>
    </div>
</div>
     

