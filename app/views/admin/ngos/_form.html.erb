<%=javascript_include_tag :kindeditor%>
<%= form_for([:admin,@ngo],:html=>{:class=>"form-horizontal"}) do |f| %>
 
 <div class="control-group">
    <label class="control-label" for="inputEmail">名称:</label>
    <div class="controls">
      <%= f.text_field :name,:required=>true  %> 
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="inputEmail">链接:</label>
    <div class="controls">
      <%= f.text_field :url,:required=>true %> 
    </div>
  </div>


<div class="control-group">
    <label class="control-label" for="inputEmail">介绍:</label>
    <div class="controls">
        <%= f.kindeditor :info,{:width=>"500px",:minWidth=>"200px", :simple_mode => true }%>
    </div>
</div> 


<div class="control-group">
  <label class="control-label" for="inputEmail">上传图片:</label>
  <div class="controls">
      <%=file_field_tag "file"%>   
  </div>
</div>



<div class="control-group">
  <div class="controls">
    <button type="submit" class="btn btn-primary">提交</button>
  </div>
</div>
 
<% end %>

   